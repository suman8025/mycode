#include <bits/stdc++.h>
using namespace std;
void util(string s)
{
    int n=s.length();
    int z[n];
    z[0]=0;
    int i=1,l=0,r=0,k;
    while(i<n)
    {
        if(i>r)
        {
            l=r=i;
            while(r<n && s[r-l]==s[r]) r++;
            z[i]=r-l;
            r--;
        }
        else
        {
            k=i-l;
            if(z[k]<r-i+1)
                z[i]=z[k];
            else
            {
                l=i;
                while(r<n && s[r-l]==s[r]) r++;
                z[i]=r-l;
                r--;
            }
        }
        i++;
    }
    z[0]=n;
    int sum=0;
    for(int i=0;i<n;i++)
        sum+=z[i];
    cout<<sum;
}
int main() {
string s;
cin>>s;
util(s);
}
